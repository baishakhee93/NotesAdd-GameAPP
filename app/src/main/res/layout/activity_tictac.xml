<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_blue"
    android:backgroundTint="@color/lite_blue"
    android:gravity="center">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|clip_vertical"
            android:text="Player1 :"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="0"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="Player2  :"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="0"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/bu1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:onClick="buClick"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/bu4"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

        <Button
            android:id="@+id/bu5"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

        <Button
            android:id="@+id/bu6"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/bu7"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

        <Button
            android:id="@+id/bu8"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_margin="3pt"
            android:layout_marginHorizontal="3pt"
            android:layout_marginVertical="3pt"
            android:layout_marginStart="3pt"
            android:backgroundTint="@color/white"
            android:onClick="buClick" />

    </TableRow>


</TableLayout>